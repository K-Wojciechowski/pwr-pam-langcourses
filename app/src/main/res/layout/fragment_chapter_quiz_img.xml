<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quiz_img_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".ui.chapter.quiz.QuizFragment">

    <ImageView
        android:id="@+id/quiz_img_answer1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:cropToPadding="true"
        android:padding="@dimen/quiz_img_border"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/quiz_img_answer2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/quiz_img_answer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:scaleType="centerCrop"
        android:cropToPadding="true"
        android:padding="@dimen/quiz_img_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/quiz_img_answer1"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/quiz_img_answer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        android:cropToPadding="true"
        android:padding="@dimen/quiz_img_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/quiz_img_answer4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quiz_img_answer1"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/quiz_img_answer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        android:cropToPadding="true"
        android:padding="@dimen/quiz_img_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/quiz_img_answer3"
        app:layout_constraintTop_toBottomOf="@+id/quiz_img_answer2"
        tools:src="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>